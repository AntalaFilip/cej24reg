{% extends "_layout.twig" %}

{% block content %}
	<div class="text-center">
		<h2>Změna informací PL s ID {{ plInfo.id }}</h2>
		<form method="POST" action="{{ path_for('pl-postDetails') }}">
			Název patroly: <input type="text" name="patrolName" value="{{ plInfo.patrolName }}"><br/>
			Křestní: <input type="text" name="firstName" value="{{ plInfo.firstName }}"><br/>
			Příjmení: <input type="text" name="lastName" value="{{ plInfo.lastName }}"><br/>
			Alergie: <input type="text" name="allergies" value="{{ plInfo.allergies }}"><br/>
			Datum narození: <input type="date" name="birthDate" value="{{ plInfo.birthDate.format('Y-m-d') }}"><br/>
			Místo narození: <input type="text" name="birthPlace" value="{{ plInfo.birthPlace }}"><br/>
			Země: <input type="text" name="country" value="{{ plInfo.country }}"><br/>
			Gender: <input type="text" name="gender" value="{{ plInfo.gender }}"><br/>
			Trvalá adresa: <input type="text" name="permanentResidence" value="{{ plInfo.permanentResidence }}"><br/>
			Skautská jednotka: <input type="text" name="scoutUnit" value="{{ plInfo.scoutUnit }}"><br/>
			Telefoní kontakt (pouze čísla s možným + na začátku): <input type="text" name="telephoneNumber"
																		 value="{{ plInfo.telephoneNumber }}"><br/>
			Email: <input type="email" name="email" value="{{ plInfo.email }}"><br/>
			Dieta: <input type="text" name="foodPreferences" value="{{ plInfo.foodPreferences }}"><br/>
			Číslo pasu/OP: <input type="text" name="cardPassportNumber" value="{{ plInfo.cardPassportNumber }}"><br/>
			Poznámky: <input type="text" name="notes" value="{{ plInfo.notes }}"><br/>

			<input type="submit" value="Uložit">
		</form>
		<a href="{{ path_for('pl-dashboard') }}">Zpět na dashboard</a>
	</div>
{% endblock %}