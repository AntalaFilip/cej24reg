{% extends "_layout.twig" %}

{% block content %}
	<div class="card closed-theme">
		<h2>Zamítnout člena IST</h2>
		<p>Skutečně chceš IST <b>{{ ist.getFirstName }} {{ ist.getLastName }}</b> zamítnout?</p>
		<a href="{{ path_for('admin-approving') }}" class="btn btn-small btn-grey">Zpět</a><br/><br/>
		<form method="post" action="{{ path_for('openIstConfirmed', {'istId' : ist.getId}) }}">
			<input type="submit" value="Zamítnout" class="btn btn-small">
		</form>
	</div>
{% endblock %}