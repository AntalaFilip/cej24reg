{% extends "kissj/_layout.twig" %}

{% block content %}
	<div class="two-cards">
		<div class="card registration-theme">
			<h2>Jedeš na akci? Vyber si kam!</h2>
			{% for event in events %}
				<a href="{{ path_for('landing', {'eventName': event.slug}) }}" class="btn">Jeď na <br/>
					{{ event.readableNameShort }}!</a><br/>
				<br/>
			{% endfor %}
		</div>

		<div class="card open-theme">
			<h2>Pořádáš akci? Založ registraci pro účastníky!</h2>
			<form action="{{ path_for('loginScreenAfterSent',{'eventName': 'rng'}) }}" method="post">
				<div class="form-group">
					<label for="form-email">E-mail:</label>
					<input class="form-control form-wide" type="email" name="email" id="form-email" required/><br/>
				</div>
				<input type="submit" value="Poslat mail &#13;&#10;pro přihlášení" class="btn form-wide"/>
			</form>
			<br/>
			<br/>
			<a href="{{ path_for('loginHelp', {'eventName': 'rng'}) }}" class="btn btn-grey">Jak funguje přihlášení
				přes mail?</a>
		</div>
	</div>
{% endblock %}