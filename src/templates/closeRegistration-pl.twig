{% extends "_layout.twig" %}

{% block content %}
	<div class="card signin-theme">
		<h2>Uzavřít registraci patroly</h2>
		<p>Skutečně chceš uzavřít registraci? Tato akce je nevratná!</p>
		<form method="POST" action="{{ path_for('pl-confirmCloseRegistration') }}">
			<label><input type="checkbox" required="required"> Souhlasím se vším, co tu bude v budoucnu napsané.</label><br/>
			<br/>
			<div class="text-center">
				<input class="btn btn-small" type="submit" value="Uzavřít registraci">
				<a class="btn btn-grey btn-small" href="{{ path_for('pl-dashboard') }}">Zpět</a>
			</div>
		</form>
	</div>
{% endblock %}