{% extends "_layout.twig" %}

{% block content %}
    <div class="card text-left open-theme">
        <h2>{% trans %}changeDetails.editDetails{% endtrans %}</h2>
        <form method="POST" action="{{ url_for('pl-changeDetails', {'eventSlug': event.slug}) }}"
              enctype="multipart/form-data">
            {% if ca.patrolName %}
                <label class="form-group form-group-inline">{% trans %}detail.patrolName{% endtrans %}: <input
                            class="form-control" type="text"
                            name="patrolName"
                            value="{{ plDetails.getPatrolName }}"
                            required="required"></label>
            {% endif %}
            {% include 'widgets/changeDetails.twig' with {'personDetails': plDetails} %}
            <div class="text-center">
                <br/>
                <input class="btn btn-small" type="submit" value="{% trans %}changeDetails.save{% endtrans %}">
                <br/>
                <br/>
                <a class="btn btn-small btn-grey"
                   href="{{ url_for('pl-dashboard', {'eventSlug': event.slug}) }}">
                    {% trans %}changeDetails.back{% endtrans %}
                </a>
            </div>
        </form>
    </div>
{% endblock %}
