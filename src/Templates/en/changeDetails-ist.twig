{% extends "_layout.twig" %}

{% block content %}
	<div class="card text-left open-theme">
		<h2>Edit your details</h2>
		<form method="POST" action="{{ path_for('ist-postDetails') }}">
			<label class="form-group form-group-inline">First name: <input class="form-control" type="text"
																		   name="firstName"
																		   value="{{ istDetails.getFirstName }}"
																		   required="required"></label>
			<label class="form-group form-group-inline">Surname: <input class="form-control" type="text"
																		name="lastName"
																		value="{{ istDetails.getLastName }}"
																		required="required"></label>
			<label class="form-group form-group-inline">Scout nickname: <input class="form-control" type="text"
																			   name="nickname"
																			   value="{{ istDetails.getNickname }}"></label>
			<label class="form-group form-group-inline">Gender:
				<select class="form-control" name="gender" required="required">
					<option value="muž" {% if istDetails.getGender == 'muž' %}selected="selected"{% endif %}>Muž
					</option>
					<option value="žena" {% if istDetails.getGender == 'žena' %}selected="selected"{% endif %}>Žena
					</option>
					<option value="jiné" {% if istDetails.getGender == 'jiné' %}selected="selected"{% endif %}>Jiné
					</option>
				</select>
			</label>
			<label class="form-group form-group-inline">Date of birth: <input class="form-control" type="date"
																			  name="birthDate"
																			  value="{{ istDetails.getBirthDate.format('Y-m-d') }}"
																			  required="required"></label>
			<label class="form-group form-group-inline">Permanent address: <input class="form-control" type="text"
																				  name="permanentResidence"
																				  value="{{ istDetails.getPermanentResidence }}"
																				  required="required"></label>
			<label class="form-group form-group-inline">Email: <input class="form-control" type="email" name="email"
																	  value="{% if istDetails.getEmail is empty %}{{ user.email }}{% else %}{{ istDetails.getEmail }}{% endif %}"
																	  required="required"></label>
			<label class="form-group form-group-inline">Doprovod (povinný do 18 let): <input class="form-control"
																							 type="text"
																							 name="legalRepresestative"
																							 placeholder="jméno a příjmení"
																							 value="{{ istDetails.getLegalRepresestative }}"></label>
			<label class="form-group form-group-inline">Korbo šátek:
				<select class="form-control" name="scarf" required="required">
					<option value="ne" {% if istDetails.getScarf == 'ne' %}selected="selected"{% endif %}>Už mám a
						nechci...
					</option>
					<option value="ano" {% if istDetails.getScarf == 'ano' %}selected="selected"{% endif %}>Nemám a za
						70 Kč beru!
					</option>
				</select>
			</label>

			<label class="form-group form-group-inline">Note: <input class="form-control" type="text" name="notes"
																	 placeholder="cokoliv dalšího?"
																	 value="{{ istDetails.getNotes }}"></label>

			<div class="text-center">
				<input class="btn btn-small" type="submit" value="Uložit">
				<a class="btn btn-small btn-grey" href="{{ path_for('ist-dashboard') }}">Back</a>
			</div>
		</form>
	</div>
{% endblock %}
